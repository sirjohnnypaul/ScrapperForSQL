  </nav>
  <div class="wrapper-movies tableAllMovies col-12 text-center m-auto">
    <% if(queries) { %>
    <h2 class="text-dark text-center mainMoviesH1 pt-5">GetMovieById SQL Procedure</h2>
    <div class="input-group col-10">
      <textarea style="height:300px;" class="form-control" disabled aria-label="With textarea"><%= queries[0].getMovieById %></textarea>
    </div>
    <h3 class="text-dark text-center mainMoviesH1 pt-2">Params:</h3> 
    <h3 class="text-dark text-center mainMoviesH1 pt-2">EXEC GetMovieById @ID=7 | @ID - movieId parameter</h3> 
    <h3 class="text-dark text-center mainMoviesH1 pt-2">Procedure Result</h3> 
  <table class="table table-striped col-md-10">
    <thead class="thead-dark">
      <tr>
        <th scope="col">#</th>
        <th scope="col">Title</th>
        <th scope="col">Original Title</th>
        <th scope="col">Movie Bio</th>
        <th scope="col">Film Year</th>
        <th scope="col">Film Rating</th>
        <th scope="col">Director Name</th>
        <th scope="col">Director Surname</th>
        <th scope="col">Production Country</th>
        <th scope="col">Book Title</th>
        <th scope="col">Author Name</th>
        <th scope="col">Author Surname</th>
      </tr>
    </thead>
    <tbody>
        <% for (let z=0; z<queries[0].response.length; z++) { %>
            <tr>
                <th scope="row"><%= z+1 %></th>
                <td><%= queries[0].response[z].Title %></td>
                <td><%= queries[0].response[z].originalTitle %></td>
                <td><%= queries[0].response[z].movieBio %></td>
                <td><%= queries[0].response[z].filmYear %></td>
                <td><%= queries[0].response[z].filmRating %></td>
                <td><%= queries[0].response[z].directorName %></td>
                <td><%= queries[0].response[z].directorSurname %></td>
                <td><%= queries[0].response[z].countryName %></td>
                <td><%= queries[0].response[z].bookTitle %></td>
                <td><%= queries[0].response[z].authorName %></td>
                <td><%= queries[0].response[z].authorSurname %></td>
              </tr>
        <% } %>
    </tbody>
  </table>


  <h2 class="text-dark text-center mainMoviesH1 pt-5">GetMovieActors SQL Procedure</h2>
    <div class="input-group col-10">
      <textarea style="height:300px;" class="form-control" disabled aria-label="With textarea"><%= queries[1].getMovieActors %></textarea>
    </div>
<h3 class="text-dark text-center mainMoviesH1 pt-2">Execution:</h3> 
<h3 class="text-dark text-center mainMoviesH1 pt-2">EXEC AggregateMovieActors @ID = 7 | @ID - movieId parameter</h3> 
 <h3 class="text-dark text-center mainMoviesH1 pt-2">Procedure Result</h3> 
  <table class="table table-striped col-md-10">
    <thead class="thead-dark">
      <tr>
        <th scope="col">#</th>
        <th scope="col">Actor Name</th>
        <th scope="col">Actor Surname</th>
        <th scope="col">Movie Title</th>
        <th scope="col">Original Title</th>
        <th scope="col">Movie Bio</th>
        <th scope="col">Director Name</th>
        <th scope="col">Director Surname</th>
      </tr>
    </thead>
    <tbody>
        <% for (let z=0; z<queries[1].response.length; z++) { %>
            <tr>
                <th scope="row"><%= z+1 %></th>
                <td><%= queries[1].response[z].actorName %></td>
                <td><%= queries[1].response[z].actorSurname %></td>
                <td><%= queries[1].response[z].Title %></td>
                <td><%= queries[1].response[z].originalTitle %></td>
                <td><%= queries[1].response[z].movieBio %></td>
                <td><%= queries[1].response[z].directorName %></td>
                <td><%= queries[1].response[z].directorSurname %></td>
              </tr>
        <% } %>
    </tbody>
  </table>


  <h2 class="text-dark text-center mainMoviesH1 pt-5">AggregateMovieRoles SQL Procedure</h2>
  <div class="input-group col-10">
    <textarea style="height:300px;" class="form-control" disabled aria-label="With textarea"><%= queries[2].getMovieRoles %></textarea>
  </div>
<h3 class="text-dark text-center mainMoviesH1 pt-2">Execution:</h3> 
<h3 class="text-dark text-center mainMoviesH1 pt-2">EXEC AggregateMovieRoles @ID = 7 | @ID - movieId parameter</h3> 
<h3 class="text-dark text-center mainMoviesH1 pt-2">Procedure Result</h3> 
<table class="table table-striped col-md-10">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Role Name</th>
      <th scope="col">Role Surname</th>
      <th scope="col">Title</th>
      <th scope="col">Original Title</th>
      <th scope="col">Movie Bio</th>
      <th scope="col">Director Name</th>
      <th scope="col">Director Surname</th>
    </tr>
  </thead>
  <tbody>
      <% for (let z=0; z<queries[2].response.length; z++) { %>
          <tr>
              <th scope="row"><%= z+1 %></th>
              <td><%= queries[2].response[z].roleName %></td>
              <td><%= queries[2].response[z].roleSurname %></td>
              <td><%= queries[2].response[z].Title %></td>
              <td><%= queries[2].response[z].originalTitle %></td>
              <td><%= queries[2].response[z].movieBio %></td>
              <td><%= queries[2].response[z].directorName %></td>
              <td><%= queries[2].response[z].directorSurname %></td>
            </tr>
      <% } %>
  </tbody>
</table>

<h2 class="text-dark text-center mainMoviesH1 pt-5">Other SQL Queries</h2>
<div class="input-group col-10">
  <textarea style="height:3000px;" class="form-control" disabled aria-label="With textarea"><%= queries[3].getOtherQueries %></textarea>
</div>
  
  <% } %>

    </div>
